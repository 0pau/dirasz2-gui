<VBox minHeight="640.0" minWidth="800.0" prefHeight="640.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.opau.dirasz2.dirasz2gui.MainWindowController">
   <children>
      <MenuBar id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="Fájl">
            <items>
              <MenuItem mnemonicParsing="false" text="Új, üres műsorterv">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Műsorterv megnyitása">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Műsorterv mentése">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Beállítások">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="COMMA" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Kilépés">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Műsor">
            <items>
              <MenuItem mnemonicParsing="false" text="Műsor indítása">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem disable="true" mnemonicParsing="false" text="Műsor leállítása">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem disable="true" mnemonicParsing="false" text="Váltás kézi vezérlésre">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Segítség">
            <items>
              <MenuItem mnemonicParsing="false" text="Súgó megnyitása" />
                  <MenuItem mnemonicParsing="false" text="A DiRASz II-ről" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="15.0">
         <children>
            <HBox fillHeight="false" opacity="0.5" spacing="5.0" style="-fx-background-color: red; -fx-background-radius: 5;" HBox.hgrow="NEVER">
               <children>
                  <Label text="ON AIR" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label managed="false" text="00:00:00" textFill="WHITE" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <Label opacity="0.4" text="RPi">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" fillHeight="false" spacing="5.0">
               <children>
                  <Label opacity="0.4" text="FM">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label opacity="0.4" text="RDS">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label opacity="0.4" text="HLS">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Separator orientation="VERTICAL" />
            <HBox alignment="CENTER" fillHeight="false" spacing="5.0">
               <children>
                  <Label text="Hátralévő idő">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label text="00:00:00" />
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" spacing="5.0">
               <children>
                  <Label text="RPi-kapcs.">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label text="nincs" />
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false" spacing="5.0">
               <children>
                  <Label text="Internetkapcs.">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label text="nincs" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" fillHeight="false" prefWidth="200.0" VBox.vgrow="NEVER">
               <children>
                  <Pane prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Műsorlista">
                           <font>
                              <Font size="15.0" />
                           </font></Label>
                     </children>
                  </Pane>
                  <Button mnemonicParsing="false" text="Műsor hozzáadása" />
               </children>
            </HBox>
            <TableView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn editable="false" maxWidth="32.0" prefWidth="100.0" sortable="false" />
                <TableColumn maxWidth="100.0" prefWidth="75.0" text="Kezdés" />
                  <TableColumn maxWidth="100.0" prefWidth="75.0" text="Hossz" />
                  <TableColumn maxWidth="5555.0" prefWidth="75.0" text="Műsor címe" />
                  <TableColumn maxWidth="100.0" prefWidth="75.0" text="Típus" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" fillHeight="false" prefWidth="200.0">
               <children>
                  <Pane prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Vezérlők">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
                  <Button mnemonicParsing="false" text="Megnyitás külön ablakban" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <GridPane hgap="10.0" minHeight="100.0" VBox.vgrow="ALWAYS">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TitledPane collapsible="false" prefWidth="200.0" text="Fájlböngésző" GridPane.vgrow="ALWAYS">
                     <content>
                        <ListView id="fileList" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                  </TitledPane>
                  <TitledPane collapsible="false" prefWidth="200.0" text="Hangforrások" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" />
                     </content>
                  </TitledPane>
                  <TitledPane collapsible="false" prefWidth="200.0" text="Kimeneti jel" GridPane.columnIndex="2" GridPane.vgrow="ALWAYS">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" />
                     </content>
                  </TitledPane>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</VBox>
